<div class="main-body">
	<div class="header" id="header">
		<div>
			<h1>Event Manager</h1>
		</div>
	</div>
	<div class="flexed">
		<div class="page">
			<div>
				<div class="tab" style="float: right;" onclick="navigation()"><i class="fa fa-bars"></i></div>
				{{#headVal committee 'head'}}
						<div class="button" style="float: right;" onclick="openModal('work')">
							Add Work
						</div>
				{{/headVal}}
				<div><h2 style="text-transform:uppercase;">{{committeeName}}</h2></div>
			</div>

			<div id="navmenu" class="menu">
				{{#headVal committee 'head'}}
					<a href="/main">
						<div class="menu-ele">
							Home
						</div>
					</a>
				{{/headVal}}
				<a href="/profile/{{currentUser}}">
					<div class="menu-ele">
						Your Profile
					</div>
				</a>
				<a href="/logout">
					<div class="menu-ele">
						Logout
					</div>
				</a>
			</div>

			<div class="list">
				<!--works-->
				{{#if board}}
				<div id="collection" class="data-table" style="overflow-x: scroll;max-width:100%;" align="center">
					<table>
						<thead>
							<tr>
								<th></th>
								<th>Member Name</th>
								<th>Email ID</th>
								<th>Points</th>
							</tr>
						</thead>
						<tbody>
						{{#each board}}
							<tr {{#headVal name ../currentUser}}class="active"{{/headVal}}>
								<td>{{plus @index 1}}</td>
								<td>{{name}}</td>
								<td>{{email}}</td>
								<td>{{points}}</td>
							</tr>
						{{/each}}
						</tbody>
					</table>
				</div>
				{{/if}}
			</div>
		</div>
	</div>
<div>